{% extends 'base.html.twig' %}

{% block title %}Events{% endblock %}

{% block body %}
<div class="container">
    <h1>Events</h1>

    <div class="card" style="width: 40rem;">
      <img src="{{ asset('images/'~ event.picture) }}" class="card-img-top" alt="{{ event.name }}">
      <div class="card-body">
        <h5 class="card-title">{{ event.name }}</h5>
        <p class="card-text">{{ event.description }}</p>
        <p class="card-text">{{ event.capacity }}</p>
        <p class="card-text">{{ event.contactEmail }}</p>
        <p class="card-text">{{ event.contactPhoneNumber }}</p>
        <p class="card-text">{{ event.address }}</p>
        <p class="card-text">{{ event.zipCode }}</p>
        <p class="card-text">{{ event.city }}</p>
        <p class="card-text">{{ event.url }}</p>
        <p class="card-text">{{ event.type }}</p>
        
        
        <a class="btn btn-info mt-2" href="{{ path('app_events_index') }}">Back to Events</a>
        <a class="btn btn-warning mt-2" href="{{ path('app_events_edit', {'id': event.id}) }}">Edit</a>
         {{ include('events/_delete_form.html.twig') }}   
      </div>
    </div>
  
{% endblock %}
